@model ModelLayer.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h4>Log in</h4>
<div class="text-danger">@Html.ValidationMessage("Failure")</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="LoginView">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Uname" class="control-label"></label>
                <input asp-for="Uname" class="form-control" />
                <span asp-validation-for="Uname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-outline-success" />
                <input type="button" value="Back" class="btn btn-outline-danger" onclick="history.back()">
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
